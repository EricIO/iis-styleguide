{
	"name": "@internetstiftelsen/styleguide",
	"version": "1.10.5-beta.0.7",
	"main": "dist/components.js",
	"ports": {
		"fractal": "3000"
	},
	"scripts": {
		"start:fractal": "fractal start -s",
		"build:fractal": "fractal build",
		"scss": "node-sass -o public/assets/css src/app.scss",
		"stylelint": "stylelint 'src/**/*.scss' '!**/vendor/**' '!**/colors/_colors-functions.scss' --fix --cache --cache-location '.stylelintcache'",
		"autoprefixer": "postcss --use autoprefixer -b 'last 2 versions' public/assets/css/app.css -d public/assets/css/",
		"cssmin": "postcss --use cssnano -b '' public/assets/css/app.css > public/assets/css/app.min.css",
		"footerscss": "node-sass -o src/assets/css/footer src/isolated-footer.scss",
		"remove-unused": "postcss postcss-remove-unused src/assets/css/footer/isolated-footer.css > src/assets/css/footer/isolated-footer.min.css",
		"isolate-footer": "npm run footerscss && npm run remove-unused",
		"browserify": "browserify src/app.js -o public/assets/js/scripts.js",
		"eslint": "eslint --fix src",
		"uglify": "uglifyjs -o public/assets/js/scripts.js public/assets/js/scripts.js",
		"htmlhint": "htmlhint build/components/preview/**/*.html",
		"imagemin": "imagemin --out-dir=public/assets/img src/**/*.{png,jpg,gif}",
		"build:css": "npm run stylelint && npm run scss && npm run autoprefixer && npm run cssmin && npm run isolate-footer",
		"build:js": "npm run eslint && npm run browserify && npm run uglify",
		"build:img": "npm run imagemin",
		"watch:css": "onchange 'src/**/*.scss' -- npm run build:css",
		"watch:js": "onchange 'src/**/*.js' -- npm run build:js",
		"watch": "concurrently \"npm:watch:css\" \"npm:watch:js\"",
		"copy:images": "copyfiles -f src/assets/images/* public/assets/images",
		"copy:fonts": "copyfiles -f src/base/fonts/* public/assets/fonts",
		"copy:zip": "copyfiles -f src/assets/zip/* public/assets/zip",
		"copy:local-assets": "npm run copy:images && npm run copy:fonts && npm run copy:zip",
		"copy:images:build": "copyfiles -f src/assets/images/* build/assets/images",
		"copy:zip:build": "copyfiles -f src/assets/zip/* build/assets/zip",
		"copy:fonts:build": "copyfiles -f src/base/fonts/* build/assets/fonts",
		"copy:build": "npm run copy:images:build && npm run copy:zip:build && npm run copy:fonts:build",
		"build": "npm run build:css && npm run build:js && npm run build:fractal && npm run htmlhint && npm run copy:build",
		"dev": "concurrently \"npm:start:fractal\" \"npm:watch\" \"npm:copy:local-assets\"",
		"package-js": "NODE_ENV=production babel src --out-dir dist --ignore src/**/*.config.js,src/app.js"
	},
	"devDependencies": {
		"@frctl/fractal": "^1.2.1",
		"@frctl/mandelbrot": "^1.3.0",
		"autoprefixer": "^9.7.4",
		"babel": "^6.23.0",
		"babel-cli": "^6.26.0",
		"babel-eslint": "^10.0.3",
		"babel-plugin-syntax-dynamic-import": "^6.18.0",
		"babel-plugin-transform-class-properties": "^6.24.1",
		"babel-preset-env": "^1.7.0",
		"browserify": "^16.5.0",
		"concat": "^1.0.3",
		"concurrently": "^4.1.2",
		"copyfiles": "^2.2.0",
		"cssnano": "^4.1.10",
		"eslint": "^5.16.0",
		"eslint-config-airbnb-base": "^13.2.0",
		"eslint-config-strongloop": "^2.1.0",
		"eslint-plugin-import": "^2.20.0",
		"htmlhint": "^0.10.3",
		"imagemin-cli": "^3.0.0",
		"node-sass": "^4.13.1",
		"onchange": "^6.1.0",
		"postcss-cli": "^6.1.3",
		"sass-extract": "^2.1.0",
		"stylelint": "^9.8.0",
		"stylelint-config-property-sort-order-smacss": "^4.0.1",
		"stylelint-scss": "^3.14.2",
		"uglify-es": "^3.3.9"
	},
	"dependencies": {
		"a11y-toggle": "^2.1.0",
		"focus-trap": "^4.0.2",
		"natives": "^1.1.6",
		"postcss-class-prefix": "^0.3.0",
		"postcss-remove-unused": "^1.2.0",
		"van11y-accessible-accordion-aria": "^3.0.1"
	},
	"fractal": {
		"main": "fractal.config.js"
	}
}
