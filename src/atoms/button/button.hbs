<{{getelement el "a"}}
	{{#if id}}id="{{id}}""{{/if}}
	{{#if button_type}}type="{{button_type}}"{{/if}}
	{{#if url}}href="{{ url }}"{{/if}}
	class="a-button{{#if modifiers}} {{getmodifiers modifiers "a-button"}}{{/if}}{{#if icon }} a-button--icon{{/if}}{{#if additional_classes}} {{ additional_classes}}{{/if}}"
	{{{attr attributes}}}
	{{#if aria_controls}}aria-controls="{{ aria_controls }}"{{/if}}
	{{#if has_states}}
		data-button-default-text="Anmäl dig"
		data-button-default-color="lemon-light"
		data-button-activated-text="Anmäld"
		data-button-activated-icon="check"
		data-button-activated-color="jade-light"
		data-button-deactivate-text="Avanmäl"
		data-button-deactivate-icon="close"
		data-button-deactivate-color="ruby-light"
		data-button-state="{{ current_state }}"
	{{/if}}
>
	<span class="a-button__text">{{ text }}</span>
	{{#if icon}}
	{{> @icon id=icon additional_classes="a-button__icon"}}
	{{/if}}
</{{getelement el "a"}}>
